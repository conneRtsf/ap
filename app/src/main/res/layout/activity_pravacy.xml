<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".mvp.ui.main.MyFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/my_back">
            <ImageView
                android:id="@+id/head1"
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_55"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_55"/>
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:text="abcd"
                android:layout_marginTop="@dimen/dp_55"
                android:layout_marginStart="@dimen/dp_100"
                android:textSize="@dimen/sp_24"/>
            <TextView
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:text="账号：123456789"
                android:layout_marginTop="@dimen/dp_85"
                android:layout_marginStart="@dimen/dp_100"
                android:textSize="@dimen/sp_16"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_m_50"
            android:orientation="vertical"
            android:background="@drawable/yuanbiankuang"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_20"
                android:layout_height="@dimen/dp_50">

                <Button
                    android:id="@+id/backS"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/arrow_back1"
                    android:layout_margin="@dimen/dp_10"/>
                <ImageView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_25"
                    android:layout_marginEnd="@dimen/dp_25"
                    android:background="@drawable/setting_privacy"/>
                <TextView
                    android:layout_width="0dp"
                    android:text="个人资料"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp_20"
                    android:layout_height="match_parent"
                    android:layout_weight="6" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_30"
                android:paddingEnd="@dimen/dp_20"
                android:layout_height="@dimen/dp_80">
                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="@dimen/sp_18"
                    android:text="头像"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"/>

                <ImageButton
                    android:id="@+id/head"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@drawable/img"
                    android:gravity="center_vertical"
                    android:outlineProvider="none"
                    android:paddingStart="@dimen/dp_30"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_17" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingStart="@dimen/dp_30"
                android:paddingEnd="@dimen/dp_20"
                android:layout_height="@dimen/dp_50">
                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="@dimen/sp_18"
                    android:text="昵称"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"/>
                <EditText
                    android:id="@+id/name1"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    android:layout_weight="7"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_30"
                android:paddingEnd="@dimen/dp_20"
                android:layout_height="@dimen/dp_50">
                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="@dimen/sp_18"
                    android:text="性别"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"/>
                <EditText
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    android:layout_weight="3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:visibility="gone"
                android:paddingStart="@dimen/dp_30"
                android:paddingEnd="@dimen/dp_20"
                android:layout_height="@dimen/dp_50">
                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="@dimen/sp_18"
                    android:text="生日"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"/>
                <EditText
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    android:layout_weight="3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:visibility="gone"
                android:paddingStart="@dimen/dp_30"
                android:paddingEnd="@dimen/dp_20"
                android:layout_height="@dimen/dp_50">
                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="@dimen/sp_18"
                    android:text="第三方绑定"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"/>
                <Button
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:outlineProvider="none"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp_17"
                    android:paddingStart="@dimen/dp_30"
                    android:textColor="@color/black"
                    android:layout_weight="6"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/change"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="确认修改资料"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/black"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/yuanbiankuang"
            android:layout_height="@dimen/dp_80"/>
    </LinearLayout>
</ScrollView>