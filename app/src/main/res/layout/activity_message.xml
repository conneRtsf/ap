<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_w"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_190"
        android:background="@drawable/back_head2">

        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_25"
            android:text="消息"
            android:textSize="@dimen/sp_22" />
        <ImageView
            android:layout_gravity="right"
            android:background="@drawable/circle"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_25"
            />
        <ImageView
            android:layout_gravity="right"
            android:background="@drawable/setting"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_25"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_70">
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:text="你的点赞"
                    android:drawableTop="@drawable/message_1"
                    android:textColor="@color/white"
                    android:layout_weight="20"
                    android:gravity="center"
                    android:textSize="@dimen/sp_15"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/dp_40"
                    android:layout_marginEnd="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:background="@drawable/comment"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="你的评论"
                    android:textColor="@color/white"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:textSize="@dimen/sp_15"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/dp_40"
                    android:layout_marginEnd="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:background="@drawable/avatar"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="联系商家"
                    android:textColor="@color/white"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:textSize="@dimen/sp_15"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_marginTop="@dimen/dp_m_40"
        android:layout_marginStart="@dimen/dp_12"
        android:background="@drawable/backnew"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/dp_20"
                    android:outlineProvider="none"
                    android:drawableLeft="@drawable/doorbell"
                    android:layout_height="@dimen/dp_60"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="系统消息\n你有一条系统消息未读取"
                    android:background="@color/white"/>
                <Button
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:outlineProvider="none"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_height="@dimen/dp_60"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="\n亲爱的xx，您有一条消息未读取"
                    android:background="@color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="查看全部订阅消息"
                    android:layout_marginTop="@dimen/dp_20"
                    android:drawableTop="@drawable/line23"
                    android:gravity="center_horizontal"
                    android:textColor="@color/grey"/>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="18">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:padding="@dimen/dp_10"
                    android:textSize="@dimen/sp_20"
                    android:textColor="@color/black"
                    android:text="最近联系"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="12">
                <Button
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:text="新增留言"
                    android:textColor="@color/grey"
                    android:background="@color/grey_w"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="@dimen/dp_0"
                    android:text="通话明细"
                    android:textColor="@color/grey"
                    android:background="@color/grey_w"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>
        <Button
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:outlineProvider="none"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_height="@dimen/dp_60"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:text="\n亲爱的xx，您有一条消息未读取"
            android:background="@drawable/backnew"/>
    </LinearLayout>
</LinearLayout>