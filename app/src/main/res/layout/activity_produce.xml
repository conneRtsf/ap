<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".mvp.ui.home.ProduceActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_3"
        android:layout_marginEnd="@dimen/dp_3"
        android:layout_height="150dp"
        android:background="@drawable/back_head1">

        <Button
            android:id="@+id/back"
            android:layout_width="@dimen/dp_60"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:drawableLeft="@drawable/arrow_back"
            android:text=" 首页"
            android:background="@color/none"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_25"
            android:gravity="center"
            android:text="果蔬介绍"
            android:drawableLeft="@drawable/tomato1"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_m_30"
        android:background="@drawable/yuanbiankuang"
        android:padding="@dimen/sp_20"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/science"/>
    </LinearLayout>
</LinearLayout>