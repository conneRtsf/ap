<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/my_back">
                <ImageView
                    android:id="@+id/head1"
                    android:layout_width="@dimen/dp_55"
                    android:layout_height="@dimen/dp_55"
                    android:layout_marginStart="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_55"/>
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_35"
                    android:text="abcd"
                    android:layout_marginTop="@dimen/dp_55"
                    android:layout_marginStart="@dimen/dp_100"
                    android:textSize="@dimen/sp_24"/>
                <TextView
                    android:id="@+id/account"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_35"
                    android:text="账号：123456789"
                    android:layout_marginTop="@dimen/dp_85"
                    android:layout_marginStart="@dimen/dp_100"
                    android:textSize="@dimen/sp_16"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_m_50"
                android:orientation="vertical"
                android:background="@drawable/yuanbiankuang"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:layout_height="@dimen/dp_50">

                    <Button
                        android:id="@+id/backS"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/arrow_back1"
                        android:layout_margin="@dimen/dp_10"/>
                    <ImageView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_25"
                        android:layout_marginEnd="@dimen/dp_25"
                        android:background="@drawable/setting_location"/>
                    <TextView
                        android:layout_width="0dp"
                        android:text="我的收货地址"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp_20"
                        android:layout_height="match_parent"
                        android:layout_weight="6" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_30"
                android:paddingTop="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_30"
                android:background="@drawable/yuanbiankuang"
                android:layout_height="wrap_content">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/people"
                        android:layout_weight="1"
                        android:textSize="@dimen/sp_18"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_30"/>
                    <TextView
                        android:id="@+id/phone"
                        android:layout_weight="2"
                        android:textSize="@dimen/sp_12"
                        android:gravity="center_vertical"
                        android:textColor="@color/grey"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_30"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/area"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:text="test"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/xiangxi"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20"
                    android:gravity="center"/>
            </LinearLayout>
            <Button
                android:id="@+id/change"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="新添加或修改地址"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/black"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/yuanbiankuang"
                android:layout_height="@dimen/dp_80"/>
        </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>