<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140"
        android:orientation="vertical"
        android:background="@drawable/suqare">
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/ic_baseline_arrow_back_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20"
            android:text="需支付"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_30"
            android:text="￥2000.00"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_240"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/back2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="小鱼农场"
            android:drawableBottom="@drawable/line23"
            android:layout_marginStart="@dimen/dp_10"
            android:gravity="center_vertical"
            android:textSize="@dimen/dp_20"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:layout_weight="3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:drawableBottom="@drawable/line23"
            android:text="年费一年                        *2                        ￥3200"
            android:layout_marginStart="@dimen/dp_10"
            android:gravity="center_vertical"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/black"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:drawableBottom="@drawable/line23"
            android:text="采草莓                            *1                        ￥0"
            android:layout_marginStart="@dimen/dp_10"
            android:gravity="center_vertical"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/black"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="                                               优惠金额：￥1200\n                                               共计￥2000"
            android:layout_marginStart="@dimen/dp_10"
            android:gravity="bottom"
            android:layout_marginBottom="@dimen/dp_10"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/black"
            android:layout_weight="3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="@drawable/back"
        android:layout_marginTop="@dimen/dp_140"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        android:backgroundTint="@color/white">
        <ImageView
            android:id="@+id/nourish"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_70"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_70"
            android:background="@drawable/paywx"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/grey"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/my"
            android:layout_width="match_parent"
            android:background="@drawable/payzfb"
            android:layout_marginStart="@dimen/dp_70"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_70"
            android:layout_weight="1"
            android:textColor="@color/grey"
            android:layout_height="@dimen/dp_40"
            android:textSize="20sp"
            android:gravity="center"/>

    </LinearLayout>
</LinearLayout>