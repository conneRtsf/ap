<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/log_back"
    android:orientation="vertical"
    tools:context=".mvp.ui.log.PasswordLogActivity">
    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        android:hint="手机号"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingStart="@dimen/dp_30"
        android:textColorHint="@color/green_bottom"
        android:background="@drawable/log_item1"
        android:layout_marginTop="@dimen/dp_280"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_height="@dimen/dp_50">
        <EditText
            android:id="@+id/getVerification"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:hint="验证码"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_30"
            android:textStyle="bold"
            android:paddingStart="@dimen/dp_30"
            android:textColor="@color/black"
            android:textColorHint="@color/green_bottom"
            android:background="@drawable/log_item1"
            />
        <Button
            android:id="@+id/verification"
            android:layout_weight="1"
            android:text="获取验证码"
            android:textColor="@color/green_bottom"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/log_item2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        android:hint="密码"
        android:textStyle="bold"
        android:paddingStart="@dimen/dp_30"
        android:textColorHint="@color/green_bottom"
        android:background="@drawable/log_item1"
        android:layout_marginTop="@dimen/dp_20"
        tools:ignore="RtlSymmetry" />
    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginStart="@dimen/dp_120"
        android:layout_marginEnd="@dimen/dp_120"
        android:hint="注册"
        android:textStyle="bold"
        android:gravity="center"
        android:textColorHint="@color/green_bottom"
        android:background="@drawable/log_item2"
        android:layout_marginTop="@dimen/dp_30"
        tools:ignore="RtlSymmetry" />

</LinearLayout>