<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".mvp.ui.main.FarmFragment">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_3"
        android:layout_marginEnd="@dimen/dp_3"
        android:layout_height="200dp"
        android:background="@drawable/farm_back">
        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_25"
            android:text="田园"
            android:textSize="@dimen/sp_22" />
        <LinearLayout
            android:layout_marginTop="@dimen/dp_60"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/abc"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_60"
                android:background="#00000000"
                android:drawableTop="@drawable/farm_patato"
                android:text="田园一号"
                android:textSize="@dimen/sp_10"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:background="#00000000"
                android:layout_height="@dimen/dp_60"
                android:drawableTop="@drawable/farm_two"
                android:text="田园二号"
                android:textSize="@dimen/sp_10"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:background="#00000000"
                android:layout_height="@dimen/dp_60"
                android:drawableTop="@drawable/farm_three"
                android:text="田园三号"
                android:textSize="@dimen/sp_10"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:background="#00000000"
                android:layout_height="@dimen/dp_60"
                android:drawableTop="@drawable/farm_fore"
                android:text="田园四号"
                android:textSize="@dimen/sp_10"
                android:layout_weight="1"/>

            <Button
                android:layout_width="0dp"
                android:background="#00000000"
                android:drawableLeft="@drawable/line4"
                android:layout_height="@dimen/dp_60"
                android:layout_weight="1"
                android:textSize="@dimen/sp_10"
                android:drawableTop="@drawable/farm_more"
                android:text="更多" />
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_m_55"
        android:orientation="horizontal"
        android:background="@drawable/yuanbiankuang"
        android:layout_height="@dimen/dp_100">
        <Button
            android:layout_width="@dimen/dp_0"
            android:layout_marginLeft="@dimen/dp_18"
            android:background="@color/white"
            android:text="种植果蔬"
            android:outlineProvider="none"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12"
            android:drawableLeft="@drawable/farm_left"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <Button
            android:outlineProvider="none"
            android:layout_width="@dimen/dp_0"
            android:background="@color/white"
            android:layout_marginRight="@dimen/dp_18"
            android:text="传感器数据"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12"
            android:drawableLeft="@drawable/farm_right"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_20"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_10"
            android:background="@drawable/yuanbiankuang">

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_5"
                android:paddingTop="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/farm_greenback"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="果蔬一号"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/grey"
                    android:text="生长天数      7天"
                    android:background="@drawable/farm_whiteleft"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sp_20"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="今日照片"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_120"
                    android:background="@drawable/vg"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sp_20"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="预估成熟"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/grey"
                    android:text="x月x日"
                    android:background="@drawable/farm_whiteleft"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_10"
                android:paddingStart="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/farm_greenback"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="果蔬二号"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/grey"
                    android:text="生长天数      5天"
                    android:background="@drawable/farm_whiteleft"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sp_20"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="今日照片"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_120"
                    android:background="@drawable/vg"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sp_20"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="预估成熟"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/grey"
                    android:text="x月x日"
                    android:background="@drawable/farm_whiteleft"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>